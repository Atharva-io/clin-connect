generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  FOUNDER
  EXPERT
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  // Link to Clerk ID
  clerkId   String   @unique
  email     String   @unique
  role      Role     @default(FOUNDER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  founderProfile FounderProfile?
  expertProfile  ExpertProfile?
}

model FounderProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  companyName String
  stage       String   // e.g. Idea, Prototype, Deployed
  description String   @db.Text
  needs       String   @db.Text
  
  location    String?
  website     String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  requests    Request[]
}

model ExpertProfile {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  
  name           String
  specialty      String
  subSpecialty   String?
  bio            String   @db.Text
  interests      String[] 
  hourlyRate     Float?
  
  isVerified     Boolean  @default(false)
  
  location       String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  clinics        Clinic[]
  slots          AvailabilitySlot[]
  receivedRequests Request[]
}

model Clinic {
  id        String   @id @default(uuid())
  expertId  String
  expert    ExpertProfile @relation(fields: [expertId], references: [id])
  
  name      String
  location  String
  description String?
}

model Request {
  id        String   @id @default(uuid())
  
  founderId String
  founder   FounderProfile @relation(fields: [founderId], references: [id])
  
  expertId  String
  expert    ExpertProfile @relation(fields: [expertId], references: [id])
  
  status    RequestStatus @default(PENDING)
  title     String
  message   String   @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  messages  Message[]
}

enum RequestStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
}

model Message {
  id        String   @id @default(uuid())
  requestId String
  request   Request  @relation(fields: [requestId], references: [id])
  
  senderId  String // Stores the User.id or User.clerkId of who sent it
  content   String @db.Text
  
  createdAt DateTime @default(now())
}

model AvailabilitySlot {
  id        String   @id @default(uuid())
  expertId  String
  expert    ExpertProfile @relation(fields: [expertId], references: [id])
  
  startTime DateTime
  endTime   DateTime
  isBooked  Boolean @default(false)
}
